<!DOCTYPE html>
<html>
  <head>
    <title>MoodApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:notice].present? %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <% if flash[:error].present? %>
    <div class="errors">
      <b>Errors:</b>

      <%= flash[:error] %>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
