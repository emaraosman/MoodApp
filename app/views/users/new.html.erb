<h2>
  Register
</h2>

<%= form_for @user do |form| %>
<%= form.text_field :username,
        placeholder: "Username",
        required: true,
        minlength: User::USERNAME_LENGTH.begin,
        maxlength: User::USERNAME_LENGTH.end
  %>

<%= form.password_field :password,
        placeholder: "Password",
        required: true,
        minlength: User::PASSWORD_LENGTH.begin,
        maxlength: User::PASSWORD_LENGTH.end
  %>
<%= submit_tag 'Submit' %>
<% end %>
<%= link_to 'Login', new_session_path %>
